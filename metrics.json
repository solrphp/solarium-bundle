{
  "includes": [
    "./",
    "src"
  ],
  "exclude": [
    "tests",
    "build",
    "public",
    "templates",
    "var",
    "vendor"
  ],
  "groups": [
    {
      "name": "Solr Config API",
      "match": "!SolrApi\\\\Config\\\\!i"
    },
    {
      "name": "Solr Schema API",
      "match": "!SolrApi\\\\Schema\\\\!i"
    },
    {
      "name": "Solr Core Admin API",
      "match": "!SolrApi\\\\CoreAdmin\\\\!i"
    },
    {
      "name": "Config Generator",
      "match": "!ConfigGenerator\\\\!i"
    },
    {
      "name": "Data Collector",
      "match": "!DataCollector\\\\!i"
    }
  ],
  "plugins": {
    "git": {
      "binary": "git"
    },
    "junit": {
      "report": "./build/coverage/junit.xml"
    }
  },
  "extensions": [ "php", "php8" ]
}
